{
    "version": "2.0.0",
    "tasks": [
        {
        "label": "Run Tests",
        "type": "shell",
        "command": "pytest tests/ --tb=short --disable-warnings",
        "group": "test"
        },
        {
        "label": "Format with Black",
        "type": "shell",
        "command": "black src/ tests/"
        },
        {
        "label": "Lint with Ruff",
        "type": "shell",
        "command": "ruff check src/ tests/"
        }
    ]
}